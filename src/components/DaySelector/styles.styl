.topLittle, .topBig
  display flex
  justify-content space-between
  align-items center
  margin-bottom 13px

.littleTitle, .bigTitle
  font-size 16px
  font-weight 600

.shortDate
  color #9BABC5
  font-size 14px
  margin-left 8px

.trigger
  cursor pointer

.topBig .trigger
  color var(--brand)

.calendar
  margin auto 0

.week
  display flex

.day
  //background #2F45C5
  width 36px
  height 36px
  display inline-flex
  justify-content center
  align-items center
  margin-left 2px
  margin-bottom 2px
  font-size 16px
  color #161938
  border 1px solid transparent
  border-radius 5px
  cursor pointer
  position relative

  &:first-child
    margin-left 0

  &:hover
    background rgba(0,0,0,.05)

  &.alien
    color rgba(0,0,0,.4)

  &.selected
    background #2F45C5
    color white

  &.today
    border-color #2F45C5

  &.dayname
    color #9BABC5
    cursor default

    &:hover
      background transparent

.hasTasksMark
  width 3px
  height 3px
  background var(--brand)
  border-radius 50%
  position absolute
  bottom 2px
  margin 0 auto

.selected .hasTasksMark
  background white