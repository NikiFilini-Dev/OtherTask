.wrapper  background rgba(22, 25, 56, 0.3)  backdrop-filter blur(25px)  width 100%  height 100%  position absolute  left 0  top 0  display flex  justify-content center  align-items center  z-index 1000000  pointer-events all.modal  width 844px  min-height 549px  background white  border-radius 24px  max-height 100vh.modalPart  padding 36px 39px  border-bottom 1px solid #EEEFF0  max-height calc(100vh - 117px)  overflow-y auto  &.mainPart    display flex  &:last-child    border-bottom 0.head  display flex  .executor    font-size 14px    color #9BABC5    display flex    align-items center  .actions    margin-left auto    display flex    align-items center    .add      height 44px      padding 0 21px      background #15DA91      display flex      align-items center      color white      border-radius 16px      cursor pointer      &.done        background #F1F1F1        color #9BABC5      svg        margin-right 11px        fill white        height .6em    .reject, .trash      height 44px      width 44px      background #F1F1F1      display flex      align-items center      justify-content center      color #9BABC5      border-radius 16px      cursor pointer      margin-left 12px    .reject      margin-left 0      svg        height 14px    .trash svg      height 24px    .separator      height 44px      width 1px      background #EEEFF0      border-radius 8px      margin 0 11px.block  width 48px  height 48px  margin 6px 8px  background: #FFFFFF;  box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.08);  border-radius: 10px;  display flex  justify-content center  align-items center  cursor pointer  border 2px solid white  &.active    border-color var(--brand)  svg    width 36px    height 36px.cardName  font-size 20px  width 100%  border 0  margin-bottom 6px  &:active, &:focus    outline none  //& :global(#editor)  //  font-size 20px;  //  font-weight bold.cardText  border 0  font-size 14px  width 100%  &:active, &:focus    outline none.group  display flex  flex-direction column  margin-bottom 28px  color #161938  &:last-child    margin-bottom 0  .head    display flex    .action      margin-left auto      font-weight 600      font-size 14px      color var(--brand)      cursor pointer      user-select none  .name    font-size 14px    color #9BABC5    font-weight 600    margin-bottom 8px.main  flex-grow 1  margin-right 36px  max-width calc(100% - 256px - 36px).settings  background #F9F9F9  border-radius 16px  padding 22px  width 256px  min-height 400px  margin-left auto  .group    margin-bottom 16px    .name      margin-bottom 8px.dateTrigger  height 48px  background #F1F1F1  display flex  align-items center  width 100%  border-radius 16px  padding 0 16px  fontt-size 15px  font-weight 600.subtasks  display flex  flex-direction column  width 100%  .subtask    display flex    width 100%    padding 6px 0    border-bottom 1px solid rgba(0,0,0,.05)    &:last-child      border 0    .checkbox      margin-top 3px    textarea      flex-grow 1      margin-left 12px      font-size 16px      width 100%      border 0      &:active, &:focus        outline none    &.done textarea      text-decoration line-through      color #BDBECC    .action      width 24px      height 24px      display flex      justify-content center      align-items center      margin-left 12px      cursor pointer      svg        //margin-top 3px        height 1.2em        color #BDBECC.progressWrapper  display flex  color #9BABC5  margin-top 12px  align-items center  font-size 14px  .progress    height 14px    border-radius 7px    background #EEF0FF    position relative    margin-left 12px    flex-grow 1    &::before      content " "      display block      width var(--donePercent)      height 100%      background var(--brand)      border-radius 7px      transition width .2s.tagsMenu  display flex  flex-direction column  overflow hidden  .tag    padding 8px 12px    border-bottom 1px solid rgba(0,0,0,.05)    color var(--color)    font-weight 500    font-size 16px    width 200px    cursor pointer    position relative    text-align left    &::before      content " "      display block      position absolute      left 0      top 0      width 100%      height 100%      opacity .1      pointer-events none      transition background .2s    &:hover::before      background var(--color).tags  display flex  flex-wrap wrap  .tag    font-size 14px    padding 4px 6px    background #F3F3F3    border-radius 8px    color var(--color)    margin 3px    border: 1px solid #ebebeb;.files  display flex  gap 16px  padding 6px 0  flex-wrap wrap