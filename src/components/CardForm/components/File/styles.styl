.file  width 180px  min-width 180px  height 100px  border-radius 8px  overflow hidden  display flex  justify-content center  align-items center  position relative  background #e2e2e2  color black  cursor default  &.word    background #2F80ED    color white  &.excel    background #29E072    color white  &.powerpoint    background #FB2B2B    color white  img    max-width 100%  .info    position absolute    top 0    left 0    display flex    flex-direction column    font-size 14px    padding 12px    max-width 100%    height 100%    width 100%    .name      font-weight 600      margin-bottom 8px      white-space nowrap      max-width 100%      overflow hidden      text-overflow ellipsis      cursor pointer    .size      font-size .8em  &.image .info    opacity 0    transition opacity .2s    &:hover      opacity 1      background rgba(0,0,0,.4)      color white  .trash    position absolute    bottom 6px    right 6px    width 24px    height 24px    cursor pointer    display flex    align-items center    justify-content center    svg      height 1.2em