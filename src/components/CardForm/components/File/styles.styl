.file  width 100px  min-width 100px  height 100px  border-radius 8px  overflow hidden  display flex  justify-content center  align-items center  position relative  background #e2e2e2  color black  cursor default  &.word    background #2F80ED    color white    .ellipsis svg      fill white  &.excel    background #29E072    color white    .ellipsis svg      fill white  &.powerpoint    background #FB2B2B    color white    .ellipsis svg      fill white  img    max-height 100%  .info    position absolute    top 0    left 0    display flex    flex-direction column    font-size 14px    padding 12px    max-width 100%    height 100%    width 100%    .name      font-weight 600      margin-bottom 8px      white-space nowrap      max-width 100%      overflow hidden      text-overflow ellipsis      cursor pointer    .size      font-size .8em  &.image .info    opacity 0    transition opacity .2s    .ellipsis svg      fill white    &:hover      opacity 1      background rgba(0,0,0,.4)      color white  .ellipsis    position absolute    bottom 6px    right 6px    width 24px    height 24px    cursor pointer    display flex    align-items center    justify-content center    svg      height 1.2em      fill #424242.menu  display flex  padding 6px 0  flex-direction column  .item    height 36px    border-bottom 1px solid rgba(0,0,0,.05)    display flex    align-items center    padding 0 16px    width 230px    position relative    cursor pointer    transition color .2s    font-weight 500    &.delete      color #FB2B2B    &::before      content " "      display block      width 100%      height 100%      pointer-events none      position absolute      left 0      top 0      transition background .2s      opacity .1    &:hover::before      background var(--brand)    &:hover      color var(--brand)    &:last-child      border-bottom 0