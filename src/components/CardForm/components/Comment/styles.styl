.comment  display flex  flex-direction column  padding 22px 0  border-top 1px solid #EEEFF0  .top    display flex    margin-bottom 12px    align-items center    .avatar      height 32px      width 32px      background var(--brand)      display flex      align-items center      justify-content center      border-radius 50%      opacity .4      margin-right 12px      svg        height 24px        fill white    .info      display flex      flex-direction column      margin-bottom 0      .name        color #161938        font-size 14px        font-weight 500        margin-bottom 3px      .date        font-size 12px        colot #9BABC5    .actions      margin-left auto      display flex      align-items center      .action        height 24px        width 24px        cursor pointer        display flex        align-items center        justify-content center        margin-left 6px        svg          height 18px          width 18px          color #9BABC5          &.awesome            fill #9BABC5  .text    color #161938    font-size 14px.editor  font-size 14px  --editor-padding 16px  border-radius 16px  background #F9F9F9