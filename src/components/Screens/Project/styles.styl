.screen
  display flex
  flex-direction column
  max-height 100%
  height 100%

.info
  margin-bottom 28px
  padding 0 20px
  display flex
  justify-content space-between

.nameEdit
  font-weight 600
  font-size 24px
  margin-right 12px
  padding 0
  border 0
  border-bottom 1px solid lightgray
  font-family SF Pro Display, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif
  height: 1.3em

  &:focus
    outline none


.title
  font-weight 600
  font-size 24px
  margin-right 12px
  cursor pointer

.newTaskActions
  margin 0px 20px
  margin-top 12px
  margin-bottom 36px

  & > *
    margin-right 6px

.listOfLists
  display flex
  flex-direction column
  overflow-y auto
  height 100%