.addButton
  background var(--brand)
  width 32px
  height 32px
  display inline-flex
  justify-content center
  align-items center
  border-radius 8px
  cursor pointer

.addIcon
  width 11px
  height 11px

.newTaskActions
  margin 12px 20px

  & > *
    margin-right 6px