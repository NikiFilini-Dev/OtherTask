.screen
  display flex
  position fixed
  left 0
  top 0
  width 100vw
  height 100vh
  z-index 9999999999999999999
  background white

.bluePart
  background var(--brand)
  width 30%
  height 100%
  display flex
  flex-direction column
  justify-content center
  padding 48px
  color white

  .logo
    display flex
    align-items center
    font-size 36px
    font-weight 500
    margin-bottom 58px
    margin-top auto

    svg
      height 66px
      margin-right 16px

  .text
    font-size 48px
    font-weight 600
    margin-bottom 32px

  .switch
    margin-top auto
    text-decoration underline
    color rgba(255, 255, 255, .66)
    cursor pointer

.content
  display flex
  justify-content center
  align-items center
  padding 0 16px
  flex-grow 1
  max-height 100vh

  .form
    padding 48px
    display flex
    flex-direction column
    min-height 400px
    min-width 460px
    max-height 100%
    overflow-y auto
    border-right 1px solid #EEEFF0

    .title
      font-weight bold

    .inputName
      font-weight 600
      font-size 14px
      margin-bottom 6px
      margin-top 24px
      color #9BABC5


  .services
    padding 48px
    height 400px
    font-weight bold

.input
  margin-top 12px

.button
  background var(--brand)
  border-radius 16px
  font-size 1em
  color white
  min-height 42px
  display flex
  align-items center
  justify-content center
  border 0
  margin-top 24px

.errors
  display flex
  flex-direction column

  .error
    color red
    margin-top 6px