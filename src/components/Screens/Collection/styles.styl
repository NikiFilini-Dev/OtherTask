.screenWrapper  display: flex;  max-height: 100%;  position: relative;  height: 100%;  overflow: visible;.usersList  display flex  flex-direction column  margin-left 24px  background var(--brand)  color white  width 72px  min-width 72px  border-radius 16px  max-height calc(100vh - 86px).add  margin-top auto  width 72px  height 72px  display flex  align-items center  justify-content center  border-top 1px solid rgba(256,256,256, .15)  cursor pointer  svg    fill white    height 28px    width 28px.user  width 72px  height 72px  display flex  flex-direction column  align-items center  justify-content center  margin-top 24px  position relative  .remove    display none  &:hover .remove    display flex    position absolute    right 8px    top 0    cursor pointer    svg      fill white      width 12px      height 12px  .avatar    width 32px    height 32px    display flex    align-items center    justify-content center    background rgba(256, 256,256, .15)    border-radius 8px    margin-bottom 6px    svg      width 24px      height 24px      color white      fill white.screen  display flex  flex-direction column  //max-height 100%  //height 100%  width calc(100% - 72px - 36px).head  padding 21px 26px  background white  border-radius 24px  border 1px solid rgba(0,0,0,.1)  margin-bottom 24px.info  display flex  align-items center.settingsTrigger  margin-left auto  margin-right 16px  display flex  align-items center  justify-content center  cursor pointer  svg    width 28px    height 28px    color #9BABC5.title  font-weight 600  font-size 24px  margin-right 12px  line-height 1em.columns  display: flex;  flex-grow 1  max-height: 100%;  overflow: hidden;  overflow-x auto