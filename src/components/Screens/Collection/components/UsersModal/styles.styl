.wrapper  background rgba(22, 25, 56, 0.3)  backdrop-filter blur(25px)  width 100%  height 100%  position absolute  left 0  top 0  display flex  justify-content center  align-items center  z-index 1000000  pointer-events all.modal  width 844px  min-height 549px  background white  border-radius 24px  max-height 100vh.modalPart  padding 36px 39px  border-bottom 1px solid #EEEFF0  max-height calc(100vh - 117px)  overflow-y auto  &.mainPart    display flex  &:last-child    border-bottom 0.head  display flex  .title    font-weight: 600;    font-size: 24px;    line-height: 150%;  .actions    margin-left auto    display flex    align-items center    .add      height 44px      padding 0 32px      background #F1F1F1      display flex      align-items center      color #9BABC5      border-radius 16px      cursor pointer      &.active        background var(--brand)        color white      svg        margin-right 11px        fill white        height .6em    .reject, .trash      height 44px      width 44px      background #F1F1F1      display flex      align-items center      justify-content center      color #9BABC5      border-radius 16px      cursor pointer      margin-left 12px    .reject      margin-left 0      svg        height 14px    .trash svg      height 24px    .separator      height 44px      width 1px      background #EEEFF0      border-radius 8px      margin 0 11px.block  width 48px  height 48px  margin 6px 8px  background: #FFFFFF;  box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.08);  border-radius: 10px;  display flex  justify-content center  align-items center  cursor pointer  border 2px solid white  &.active    border-color var(--brand)  svg    width 36px    height 36px.cardName  font-size 20px  width 100%  border 0  margin-bottom 6px  &:active, &:focus    outline none  //& :global(#editor)  //  font-size 20px;  //  font-weight bold.cardText  border 0  font-size 14px  width 100%  &:active, &:focus    outline none.group  display flex  flex-direction column  margin-bottom 28px  color #161938  &:last-child    margin-bottom 0  .head    display flex    .action      margin-left auto      font-weight 600      font-size 14px      color var(--brand)      cursor pointer      user-select none      display flex      align-items center      svg        height 1.3em        margin-right 6px  .name    font-size 14px    color #9BABC5    font-weight 600    margin-bottom 8px    display flex    align-items center    svg      fill #9BABC5      height 1em      margin 0 6px      cursor pointer      transition transform .2s      &.rotated        transform rotate(180deg).main  flex-grow 1.users  display flex  flex-direction column  .user    height 56px    padding 8px    display flex    align-items center    margin-top 8px    font-weight 500    border-radius 16px    .avatar      height 32px      width 32px      background var(--brand)      display flex      align-items center      justify-content center      border-radius 50%      opacity .4      margin-right 12px      svg        height 24px        fill white    &:hover      background #F6F6F6    .email      opacity .6      margin-left 12px    .remove      width 24px      height 24px      margin-left auto      cursor pointer      display flex      align-items center      justify-content center      margin-right 12px      opacity 0      svg        height 12px        width 12px        color #9BABC5    &:hover .remove      opacity 1.emailsInput  background #F6F6F6  border-radius 16px  padding 16px  font-size 16px  border 0  resize none  &:active, &:focus    outline none