$size = 28px.floater  position absolute  width $size  height $size  left 'calc(50% - %s)' % ($size / 2)  bottom 'calc(0px - %s)' % ($size / 2)  background white  border-radius 50%  border 1px solid #e4e4e4  display flex  justify-content center  align-items center  font-size 20px  font-weight 600  color #9babc5  box-shadow 0 2px 6px rgba(0, 0, 0, .16)  cursor pointer