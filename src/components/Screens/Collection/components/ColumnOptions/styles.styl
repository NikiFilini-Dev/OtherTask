.wrapper  padding 24px  display flex  flex-direction column  text-align left  max-width 35vw.group  margin-bottom 24px  &:last-child    margin-bottom 0  .name    margin-bottom 12px    font-size 14px    color #9BABC5    font-weight 500.list  display flex  flex-wrap wrap  gap 16px.block  width 48px  height 48px  //margin 6px 8px  background: #FFFFFF;  box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.08);  border-radius: 10px;  display flex  justify-content center  align-items center  cursor pointer  border 2px solid white  &.active    border-color var(--brand)  svg    width 36px    height 36px.color  width 48px  height 48px  border-radius 10px  background var(--color)  cursor pointer  display flex  justify-content center  align-items center  &.active::before    content: " "    display block    width 36px    height 36px    border 2px solid white    border-radius 10px.actions  display flex  gap 12px  flex-wrap wrap  font-size 14px  .delete    font-weight 600    color red    cursor pointer