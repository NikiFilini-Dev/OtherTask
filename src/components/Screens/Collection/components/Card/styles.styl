.card  background white  border-radius 16px  padding 16px  margin-bottom 16px  border 1px solid rgba(0,0,0,.1)  flex-shrink 0  position relative  &.done    padding-top calc(8px + 28px)  .floater    position absolute    bottom calc(0px - 28px + (28px - 16px) / 2)    left 0    opacity 0    z-index  10000000000    transition opacity .2s  .floater:hover    pointer-events all    opacity 1  .done    width 100%    position absolute    left 0    top 0    color #29E072    height 28px    display flex    justify-content center    align-items center    font-size 12px    overflow hidden    border-radius 16px 16px 0 0    svg      height 8px      margin-right 6px    &::before      content " "      display flex      justify-content center      padding 0 4px      width 100%      height 100%      position absolute      left 0      top 0      pointer-events none      background #29E072      opacity .15  .title    font-size 14px    font-weight 600    line-height 21px  .description    margin-top 8px    font-size 14px    line-height 21px  .progressWrapper    display flex    color #9BABC5    font-size 12px    align-items center    margin-top 8px    .progress      height 8px      border-radius 4px      margin-left 8px      background #EEF0FF      flex-grow 1      position relative      &::before        content " "        display block        width var(--donePercent)        height 100%        border-radius 4px        background var(--brand)        transition widtth .2s  .separator    width 100%    height 1px    background #EEEFF0    margin-top 8px  .bottom    margin-top 8px    display flex    .count      font-size 13px      color #9BABC5      display flex      margin-right 8px      svg        height 1.2em        margin-right 3px    .date      margin-left auto      font-size 13px      color #9BABC5      display flex      align-items center      line-height 13px      svg        height 16px        margin-right 4px      &.today        color var(--brand)      &.expired        color #FB2B2B  .tags    display flex    flex-wrap wrap    margin-top 13px    .tag      font-size 14px      padding 4px 6px      background #F6F6F6      border-radius 8px      color var(--color)      margin 3px      border: 1px solid #ebebeb;.preview  width: calc(100% + 32px);  margin-left: -16px;  margin-top: -16px;  margin-bottom: 8px;  border-radius: 16px 15px 0 0;.done .preview  margin-top -8px  border-radius 0