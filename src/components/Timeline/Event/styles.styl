.event
  border-radius 8px
  background white
  color var(--background)
  padding 8px
  display flex
  //flex-direction column
  font-size 14px
  height 100%
  position relative
  min-height calc(12px + 1em)

  &::before
    content " "
    position absolute
    display block
    left 0
    top 0
    width 100%
    height 100%
    background var(--background)
    pointer-events none
    opacity .15

  .start
    font-weight 500
    color var(--background)
    margin-right 8px
    opacity .6
    font-size .8em

  .name
    color var(--background)
    font-weight 500

  .duration
    color var(--background)
    opacity .5
    font-weight 300
    font-size .8em

.allDayEvent
  background white
  padding 3px 6px
  border-radius 8px
  overflow hidden
  margin-bottom 6px
  position relative

  &::before
    content " "
    position absolute
    display block
    left 0
    top 0
    width 100%
    height 100%
    background var(--background)
    pointer-events none
    opacity .15

  .start
    display none

  .name
    color var(--background)
    font-weight 500

.eventMenu
  padding 24px
  font-family SF Pro Display, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif
  display flex
  flex-direction column
  align-items flex-start

  .menuAction
    width 1.1em
    height 1.1em
    display flex
    justify-content center
    align-items center
    cursor pointer

    svg
      width .9em
      fill #9BABC5

  input
    padding 0
    border 0
    font-weight 500
    font-size 1.1em
    font-family SF Pro Display, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif
    &:active,&:focus
      outline none

  .menuItem
    margin-top 16px
    display flex
    justify-content space-between
    width 100%

    &:first-child
      margin-top 0

    &.disabled
      opacity .5

    .menuItemName
      color #9BABC5
      font-size 0.95em
      font-weight 300
    .menuItemValue
      color var(--brand)

    .colorVariant
      background var(--color)
      width 24px
      height 24px
      margin 0 3px
      display inline-flex
      justify-content center
      align-items center
      cursor pointer

      &.selected::before
        content " "
        display inline-block
        width 18px
        height 18px
        border 2px solid white



.eventAndMenuWrapper
  height 100%
  width 100%

.compact .event
  padding 5px

.compact .name
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
