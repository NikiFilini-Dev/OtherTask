.calendar
  margin 0 auto
  margin-top 8  px

.week
  display flex
  //&:last-child
  //  margin-bottom 24px

.day
  //background #2F45C5
  width 36px
  height 36px
  display inline-flex
  justify-content center
  align-items center
  margin-left 2px
  margin-bottom 2px
  font-size 16px
  color #161938
  border 1px solid transparent
  border-radius 5px
  cursor pointer
  position relative
  font-weight 300

  &:first-child
    margin-left 0

  &:hover
    background rgba(0,0,0,.05)

  &.alien
    color rgba(0,0,0,.4)

  &.selected
    background var(--brand)
    color white

  &.today
    border-color var(--brand)

  &.dayname
    color #9BABC5
    font-size 14px
    font-weight 200
    cursor default

    &:hover
      background transparent

.hasTasksMark
  width 3px
  height 3px
  background var(--brand)
  border-radius 50%
  position absolute
  bottom 2px
  margin 0 auto

.selected .hasTasksMark
  background white

.monthsSelector
  display flex
  justify-content space-between
  align-items center
  margin-top 8px
  margin-bottom 4px

  .changeMonth
    cursor pointer
    color #9BABC5
    user-select none

  .yearHint
    color #9BABC5

  .currentMonth
    font-weight 500