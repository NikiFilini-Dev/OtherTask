.select  position relative  min-width 200px  --selectListHeight 96px  &.stretch    width 100%  &.active::before    content " "    display block    position absolute    height calc(var(--selectListHeight, 0) + 48px)    left 0    top 0    border-radius 16px    box-shadow 0 1px 6px 1px rgba(0,0,0,.1)    width 100%    pointer-events none    z-index 100000000.head  background #F1F1F1  border-radius 16px  height 48px  padding 0 16px  display flex  align-items center  font-weight 600  font-size 16px  z-index 2  &.active    border-radius 16px 16px 0 0  .angle    height 16px    fill #9BABC5    padding-left 16px    margin-left auto.icon  margin-right 8px  height 1.2em.list  background #F1F1F1  border-radius 0 0 16px 16px  display flex  flex-direction column  border-top 1px solid rgba(0,0,0,.05)  position absolute  top 47px  left 0  width 100%  z-index 1  overflow hidden  .variant    height 48px    padding 0 16px    display flex    align-items center    position relative    font-weight 600    &.active      color var(--brand)    &:hover::before      content " "      background var(--brand)      opacity .05      width 100%      height 100%      position absolute      left 0      top 0      pointer-events none.select:not(.active) .list  border none