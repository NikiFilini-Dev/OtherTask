.avatar  height var(--size, 32px)  width var(--size, 32px)  background white  display flex  align-items center  justify-content center  border-radius 50%  position relative  overflow hidden  &::before    content " "    display flex    position absolute    left 0    top 0    background var(--brand)    width 100%    height 100%    opacity .4    z-index 0  svg    height calc(var(--size, 32px) / 3 * 2)    fill white    z-index 1  .ini    font-size calc(var(--size, 32px) / 3 * 2)    color white    font-weight 600    z-index 1