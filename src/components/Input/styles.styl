.inputWrapper
  display flex
  position relative
  background rgba(0,0,0,.03)
  border-radius 4px
  border 1.5px solid rgba(0,0,0,.03)

  .placeholder
    position absolute
    color rgba(0,0,0,.6)
    font-size 1em
    line-height 1em
    left 8px
    bottom 11px
    transition top .2s, bottom .2s, color .2s

  input
    margin-top 18px
    font-size 1em
    line-height 1em
    padding 8px
    border 0
    width 100%
    background transparent

    &:active, &:focus
      outline none

  &.active
    .placeholder
      color var(--brand)
      font-size 14px
      bottom calc(16px + 1em + 4px)
      font-weight 550
