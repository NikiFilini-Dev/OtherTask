.checkbox
  border 1px solid #D1D2E1
  border-radius 5px
  width 15px
  height 15px
  min-width 15px
  display inline-flex
  justify-content center
  align-items center

  &.circle
    border-radius 50%

  &.checked
    background var(--brand)
    border-color var(--brand)

  &.colored.checked
    background var(--color)
    border-color var(--color)

.checkmark
  color white
  display none
  margin-top 2px

.checkbox.checked .checkmark
  display: inline-block