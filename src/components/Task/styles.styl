.task
  padding 9px 20px
  border-radius 8.5px
  cursor pointer

  &.active
    background #f7f7f7

.check
  margin-right 20px

.task.done .taskText
  text-decoration line-through
  color #BDBECC

.line
  display flex
  align-items center
  margin-top 9px

.line.fullOnly
  display none

.task.active .line.fullOnly
  display flex

.line:first-child
  margin-top 0

.notes
  width 100%
  border 0
  font-family Gilroy
  background transparent
  font-size 15px

  &:focus
    outline none