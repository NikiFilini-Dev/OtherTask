calendarWidth = 250px
sideBarWidth = 250px
mainWidth = calc(100% - 16px - var(--sidebar-width) - 16px - var(--timeline-width))

mainBlockRadius = 8.5px
mainBlockPadding = 36px 24px

brand = #2F45C5
accent = #FB2B76

@import "../../assets/fonts/Gilroy/stylesheet.css"

:root
  --brand #2F45C5
  --accent #FB2B76

*
  box-sizing border-box

body
  margin 0
  position absolute
  width 100vw
  height 100vh
  overflow hidden
  //background #9c9c9cd9

:global(#app)
  padding 24px
  padding-top 0
  font-family SF Pro Display, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif
  //background #F7F7F7
  height calc(100vh - 36px)
  //background #ffffff29
  position absolute
  left 0
  bottom 0
  width 100vw

.app
  display flex
  height: 100%

.resizeHandle
  height 100%
  width 3px
  //background var(--brand)
  cursor col-resize

.sideBar
  background white
  padding: mainBlockPadding
  width var(--sidebar-width)
  border-radius 8.5px
  overflow-y auto
  margin-right 8px

.main
  padding 36px 16px
  background white
  border-radius 8.5px
  margin 0 8px
  width mainWidth

.timeline
  width var(--timeline-width)
  background white
  border-radius 8.5px
  padding mainBlockPadding
  margin-left 8px

*::-webkit-scrollbar {
  width: 3px;
}

*::-webkit-scrollbar-track {
  //background white
  position relative
}

*::-webkit-scrollbar-thumb {
  width 3px
  border-radius 5px
  background #DCDFE5
}