calendarWidth = 346px
sideBarWidth = 250px
mainWidth = calc(100% - 346px - 250px - 32px)

mainBlockRadius = 8.5px
mainBlockPadding = 47px 36px

brand = #2F45C5
accent = #FB2B76

@import "../../assets/fonts/Gilroy/stylesheet.css"

*
  box-sizing border-box

body
  margin 0
  padding 32px
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif
  background #F7F7F7
  height 100vh

.app
  display flex
  height: 100%

.sideBar
  background white
  padding: mainBlockPadding
  width 250px
  border-radius 8.5px

.logoWrapper
  display flex
  align-items center
  margin-bottom 32px

.logo
  height 35px
  width 35px

.logoTitle
  font-family Gilroy
  font-style normal
  font-weight 600
  font-size 24px
  line-height 29px
  color #161938
  margin-left 9px

.groupTitle
  color: gray
  margin-bottom 4px

.groupElement
  height 44px
  padding: 8px
  border-radius 5px
  margin-bottom 4px
  color black
  font-weight 600
  display flex
  align-items center

.groupElement.active
  color black
  background #f7f7f7

.main
  padding mainBlockPadding
  background white
  border-radius 8.5px
  margin 0 16px
  width mainWidth

.timeline
  width 346px
  background white
  border-radius 8.5px
  padding mainBlockPadding
